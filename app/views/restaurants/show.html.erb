<div class="container">
  <h2><%= @restaurant.name %></h2>
  <h4><%= @restaurant.category.capitalize %></h4>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>

  <%= link_to 'Back to restaurants list', restaurants_path %>
  <br>
  <br>
  <h6>Add a review below</h6>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, :required => true %>
    <%= f.input :rating, :required => true, :collection => 0..5 %>
    <%= f.submit "Submit review" %>
  <% end %>
  <br>
  <h6>Here are all the reviews for this restaurant</h6>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= "#{review.content} - #{review.rating}" %></li>
    <% end %>
  </ul>
</div>
