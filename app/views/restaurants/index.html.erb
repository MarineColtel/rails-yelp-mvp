<div class="container">
  <h1>List of Restaurants</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to "#{restaurant.name} - #{restaurant.category.capitalize}", restaurant_path(restaurant.id) %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add new restaurant', new_restaurant_path, class: 'btn', style: 'background-color: #e3f2fd;' %>
</div>
